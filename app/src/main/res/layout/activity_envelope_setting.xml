<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/envelope_max_set"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/llin1"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <TextView
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle_solide_blue"
            android:gravity="center"
            android:text="@string/curentmax"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <EditText
            android:singleLine="true"
            android:inputType="textPersonName"
            android:id="@+id/editIp"
            android:layout_width="274dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:background="@drawable/rectangle_solide_baff"
            android:paddingLeft="10dp"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llin2"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/llin1"
        app:layout_constraintStart_toStartOf="@+id/llin1"
        app:layout_constraintTop_toBottomOf="@+id/llin1">

        <TextView
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle_solide_blue"
            android:gravity="center"
            android:text="@string/inputmaxmoney"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <EditText
            android:singleLine="true"
            android:inputType="textPersonName"
            android:layout_width="274dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:background="@drawable/rectangle_solide_baff"
            android:paddingLeft="10dp"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>


    <include layout="@layout/common_btnback" />

    <include layout="@layout/common_btnmiddle" />

    <include layout="@layout/common_btnlogout" />


</android.support.constraint.ConstraintLayout>
