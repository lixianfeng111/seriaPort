<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/systemdubug"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_printdebug"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/blue_button_clicked"
        android:gravity="center"
        android:text="@string/printdevice_debug"
        android:textColor="@color/white"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/scan"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/blue_button_clicked"
        android:gravity="center"
        android:text="@string/scanner_debug"
        android:textColor="@color/white"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_printdebug"
        app:layout_constraintStart_toStartOf="@+id/tv_printdebug"
        app:layout_constraintTop_toBottomOf="@+id/tv_printdebug" />


    <include layout="@layout/common_btnback" />


    <include layout="@layout/common_btnlogout" />
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/scan"
        tools:ignore="MissingConstraints" >
        <TextView
            android:id="@+id/debug_hood_door_open"
            android:layout_width="195dp"
            android:layout_height="60dp"
            android:background="@drawable/blue_button_clicked"
            android:gravity="center"
            android:text="@string/debug_hood_door_open"
            android:textSize="20sp"
            android:textColor="@color/white"
            tools:ignore="MissingConstraints"
            />

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/debug_hood_door_close"
            android:layout_width="195dp"
            android:layout_height="60dp"
            android:background="@drawable/blue_button_clicked"
            android:gravity="center"
            android:text="@string/debug_hood_door_close"
            android:textSize="20sp"
            android:textColor="@color/white"


            tools:ignore="MissingConstraints"
            />
    </LinearLayout>




</android.support.constraint.ConstraintLayout>
