<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/btRetry"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="34dp"
        android:layout_marginRight="70dp"
        android:background="@drawable/blue_button_clicked"
        android:textColor="@color/white"
        android:text="@string/retry"
        app:layout_constraintEnd_toStartOf="@+id/btSkip"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:layout_marginRight="5dp"
        android:id="@+id/btSkip"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="@string/skip"
        android:background="@drawable/blue_button_clicked"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/btRetry"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btRetry"
        app:layout_constraintTop_toTopOf="@+id/btRetry"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:typeface="normal"
        android:textSize="24sp"
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:text="@string/clear_hint_quit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#007EFF"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints" />

</android.support.constraint.ConstraintLayout>